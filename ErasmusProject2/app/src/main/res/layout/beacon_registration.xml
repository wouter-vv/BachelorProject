<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.thomas.erasmusproject.BeaconRegistration"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="8dp">

        <EditText
            android:id="@+id/txtBeacon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtBeacon1"
            android:layout_alignStart="@+id/txtBeacon1"
            android:layout_below="@+id/txtBeacon1"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/txtBeacon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtBeacon2"
            android:layout_alignStart="@+id/txtBeacon2"
            android:layout_below="@+id/txtBeacon2"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:inputType="text" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtBeacon4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/txtBeacon4"
            android:layout_below="@+id/txtBeacon4"
            android:layout_marginTop="28dp"
            android:onClick="OnSend"
            android:text="Send" />

        <EditText
            android:id="@+id/txtBeacon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:selectAllOnFocus="false" />

        <TextView
            android:id="@+id/lblBeacon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtBeacon1"
            android:text="Beacon 1" />

        <TextView
            android:id="@+id/lblBeacon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/txtBeacon2"
            android:layout_toEndOf="@+id/btnSend"
            android:text="Beacon 2" />

        <TextView
            android:id="@+id/lblBeacon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lblBeacon2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/lblBeacon2"
            android:layout_alignTop="@+id/txtBeacon3"
            android:text="Beacon 3" />

        <EditText
            android:id="@+id/txtBeacon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtBeacon3"
            android:layout_alignRight="@+id/txtBeacon3"
            android:layout_below="@+id/txtBeacon3"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/lblBeacon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/txtBeacon4"
            android:text="Beacon 4" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="26dp"
            android:text="Cancel"
            android:onClick="cancel"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
